@{
    ViewBag.Title = "Home Page";
}
<div class="container" style="margin-top:10px;">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-8">
                        <h4>
                           @ViewBag.UserName
                        </h4>
                        <p>
                            <i class="glyphicon glyphicon-check"></i> @ViewBag.Status
                            <br />
                            <i class="glyphicon glyphicon-user"></i> @ViewBag.Designation
                            <br />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>